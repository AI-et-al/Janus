# Janus Environment Configuration
# Copy to .env and fill in your values

# =============================================================================
# API KEYS (Required for Council functionality)
# =============================================================================

# Anthropic (Claude) - https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (GPT) - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# OpenRouter (Multi-model, cost optimization) - https://openrouter.ai
OPENROUTER_API_KEY=sk-or-...

# Google Gemini - https://aistudio.google.com/app/apikey
GEMINI_API_KEY=...

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Council models (the deliberators)
CLAUDE_MODEL=claude-opus-4-5-20251101
GPT_MODEL=gpt-5.1
GEMINI_MODEL=gemini-3-pro

# Orchestrator (coordinates subagents)
ORCHESTRATOR_MODEL=claude-sonnet-4-5-20250929

# Swarm models (scouts and executors)
SWARM_MODEL=claude-3-5-haiku-20241022

# Model freshness + oracle refresh
JANUS_MODEL_FRESHNESS_TTL_HOURS=48
JANUS_CRITICAL_MODEL_KEYS=sonnet,gpt-4-turbo,gemini-pro
JANUS_ORACLE_TIMEOUT_SECONDS=120
# JANUS_ORACLE_MODEL=gpt-5.2-pro
# JANUS_ALERT_LOG_PATH=C:\Users\dmcs\OneDrive\Documents\AI\Janus~\janus-alerts.log

# Executor safety controls
JANUS_EXECUTOR_ALLOW_CMDS=node,npm,npx,tsx,vitest,git
JANUS_EXECUTOR_ALLOW_GIT_SUBCMDS=status,diff,log,rev-parse,show
JANUS_EXECUTOR_MAX_ACTIONS=8
JANUS_EXECUTOR_MAX_COMMAND_MS=120000
JANUS_EXECUTOR_MAX_FILE_BYTES=200000

# =============================================================================
# CONTEXT BRIDGE
# =============================================================================

# Path to janus-context directory (Git-backed state)
JANUS_CONTEXT_ROOT=./janus-context

# Remote for context sync (optional)
# JANUS_CONTEXT_REMOTE=git@github.com:username/janus-context.git

# =============================================================================
# SERVER CONFIGURATION (for UI)
# =============================================================================

# API server port
API_PORT=3000

# WebSocket port (for real-time deliberation updates)
WS_PORT=3001

# =============================================================================
# COST OPTIMIZATION (Multi-Cloud Routing)
# =============================================================================

# Enable automatic provider selection based on cost/quality
ENABLE_COST_OPTIMIZATION=true

# Enable automatic peer ratings for tier evolution
ENABLE_MODEL_PEER_RATINGS=true

# Monthly budget limit (USD) - hard stop at this amount
JANUS_BUDGET_MONTHLY=150

# Cost tracking
TRACK_COSTS=true

# Maximum spend per session (USD) - will warn at 80%
MAX_SESSION_COST=50.00

# =============================================================================
# CLAUDE-OS BACKEND (Code Learning)
# =============================================================================

# Code indexing backend: anthropic, openai, or local
CLAUDE_OS_BACKEND=anthropic

# Optional: for local Ollama deployment
# OLLAMA_API_URL=http://localhost:11434

# =============================================================================
# DEBUGGING
# =============================================================================

# Log level: error, warn, info, debug, trace
LOG_LEVEL=info

# Show full API responses (verbose)
DEBUG_API=false
